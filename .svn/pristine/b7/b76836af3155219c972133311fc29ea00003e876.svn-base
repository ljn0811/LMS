<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.happyjob.study.std.dao.PersonalInfoDao">

	<!-- 개인정보 상세 -->
	<select id="personalInfoDtl" resultType="kr.happyjob.study.std.model.PersonalInfoVO">
	   /*kr.happyjob.study.std.dao.PersonalInfoDao.personalInfoDtl*/
        SELECT name
                , password
                , user_gender
                , user_birth
                , user_email
                , user_phone
                , user_location
         FROM tb_userinfo
               WHERE user_no = #{userno} 
	</select>
	
	<!-- 개인정보 수정 -->
    <update id="personalInfoUpdate">
	      UPDATE tb_userinfo
	     SET name = #{name},
		      user_gender = #{user_gender},
		      user_birth = #{user_birth},
		      user_email = #{user_email},
		      user_phone = #{user_phone},
		      user_location = #{user_location},
		      updated_at = NOW()
	     WHERE user_no = #{userno} 
	 </update>	
	 
	 <!-- 비밀번호 변경 -->
    <update id="personalInfoUpdatePwd">
	     UPDATE tb_userinfo
				SET password = #{password},
				     updated_at = NOW()
				WHERE user_no = #{userno} 
	 </update>	
	 
	 <!-- 이메일 중복체크 -->
	<select id="checkEmail" resultType="int">
	   /*kr.happyjob.study.std.dao.PersonalInfoDao.checkEmail*/
       SELECT COUNT(*) AS email_count
          FROM tb_userinfo 
          WHERE user_email = #{user_email}
          AND user_no != #{userno}
	</select>
	
	<!-- 회원탈퇴 -->
    <update id="deleteUser">
	     UPDATE tb_userinfo
				SET password = '',
				     updated_at = NOW(),
				     delete_yn = 'Y'
				WHERE user_no = #{userno} 
	 </update>	
	
</mapper>