<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.happyjob.study.adm.dao.ClassroomDao">

   <!-- 강의 목록 조회 -->
   <select id="classroomList" resultType="kr.happyjob.study.adm.model.ClassroomVO">
      /*kr.happyjob.study.adm.dao.ClassroomDao.classroomList*/      
      select  classroom_no
      		   ,classroom_nm
      		   ,seat_cnt
      		   ,classroom_etc
      		   ,classroom_size
         from tb_classroom_mgt
         <where>
         	<if test="(searchClassroom != null) and (!searchClassroom.equals(''))">
         		and classroom_nm like CONCAT('%', #{searchClassroom}, '%')
         	</if>
         </where>
         LIMIT #{startpos}, #{pagesize}
   </select>
   
   	<!-- 총 갯수 조회 -->
	<select id="classroomCnt" resultType="int">
		/*kr.happyjob.study.tut.dao.LecturePlanDao.lecturePlanCnt*/
		select count(*)
		from tb_classroom_mgt
		</select>   
		
	<select id="classroomDetail" resultType="kr.happyjob.study.adm.model.ClassroomVO">
	   /*kr.happyjob.study.tut.dao.lecturePlanDao.lecturePlanDetail*/
        select   l.lec_no
                ,l.user_no 
                ,l.classroom_no
                ,ui.user_phone
                ,ui.user_email
              	,l.learn_goal
			 	,l.learn_plan
		from tb_lecture l
         	inner join tb_userinfo ui on ui.user_no = l.user_no
	   where l.lec_no = #{lec_no}
	</select>
	
	<insert id="classroomSave">
	    /*kr.happyjob.study.classroom.dao.ClassroomDao.classroomSave*/
	    <selectKey resultType="int" keyProperty="classroomNo" order="BEFORE">
            select ifnull(max(classroom_no),0) + 1 from tb_classroom_mgt
        </selectKey> 
	    insert into tb_classroom_mgt
	                  (   classroom_no
	                  	  ,classroom_nm
	                  	  ,seat_cnt
	                  	  ,classroom_etc
	                  	  ,classroom_size
	                 ) values (
	                     #{classroom_no} 
	                    ,#{classroom_nm} 
	                    ,#{seat_cnt}
	                    ,#{classroom_etc}
	                    ,#{classroom_size}
	                 )
	</insert>
</mapper>